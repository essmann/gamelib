{
  "name": "gamelib-backend",
  "version": "1.0.0",
  "description": "backend for gamelib",
  "main": "main.js",
  "scripts": {
    "start": "electron ./dist/ts/main.js",
    "test": "jest",
    "build": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "appId": "com.my-electron-app",
    "productName": "MyElectronApp",
    "files": [
      "src/api/**/*",
      "src/main.js",
      "src/preload.js",
      "src/scripts/**/*",
      "dist/**/*",
      "node_modules**/*",
      "src/api/sqlite/games.db",
      "src/api/sqlite/external_games.db"
    ],
    "asarUnpack": [
      "src/api/sqlite/games.db",
      "src/api/sqlite/external_games.db"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "author": "essmann",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "electron": "^38.5.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/express": "^5.0.5",
    "@types/mysql": "^2.15.27",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.1.0",
    "mysql": "^2.18.1",
    "node-ts": "^8.0.8",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7"
  }
}
