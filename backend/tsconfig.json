{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "types": ["node"],

    /* Interop & Module Handling */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    
    
    "allowJs": true,
    /* Output */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },

  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/api/sqlite/games.db",
    "src/api/sqlite/external_games.db"
  ]
}
